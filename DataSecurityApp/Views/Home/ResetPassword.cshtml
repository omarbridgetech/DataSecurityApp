<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

@model string
<h2>Reset Password</h2>
<form method="post">
    <input type="hidden" name="token" value="@Model" />

    <div class="input-group mb-2">
        <input type="password" id="resetPassword" name="newPassword" placeholder="New password" required class="form-control mb-2" />
        <span class="input-group-text">
            <i class="bi bi-eye-slash" id="toggleResetPassword" style="cursor: pointer;"></i>
        </span>
    </div>

    <button type="submit" class="btn btn-success">Reset</button>
</form>

<script>
    function togglePassword(inputId, toggleId) {
        const input = document.getElementById(inputId);
        const toggle = document.getElementById(toggleId);
        if (input && toggle) {
            toggle.addEventListener('click', () => {
                const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                input.setAttribute('type', type);
                toggle.classList.toggle('bi-eye');
                toggle.classList.toggle('bi-eye-slash');
            });
        }
    }
    togglePassword('loginPassword', 'toggleLoginPassword');
    togglePassword('resetPassword', 'toggleResetPassword');
    togglePassword('addUserPassword', 'toggleAddUserPassword');
</script>

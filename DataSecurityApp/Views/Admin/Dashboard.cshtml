@model List<DataSecurityApp.Models.User>
<h2>Admin Dashboard</h2>
<a class="btn btn-success mb-2" asp-action="AddUser">Add New User</a>
<a class="btn btn-danger mb-2 float-end" asp-controller="Home" asp-action="Logout">Logout</a>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Full Name</th>
                <th>Personal ID</th>
                <th>Credit Card Number</th>
                <th>Valid Date</th>
                <th>CVC</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@(user.FirstName ?? "") @(user.LastName ?? "")</td>
                    <td>@(user.PersonalId ?? "")</td>
                    <td>@(user.CreditCardNumber ?? "")</td>
                    <td>@(user.ValidDate ?? "")</td>
                    <td>@(user.CVC ?? "")</td>
                    <td>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>